/*-- Create Broadcast Ajax --*/
	$(document).on('ajax:beforeSend', '#broadcast', function(){
		$('#broadcast').loading();
	}).on('ajax:complete', '#broadcast', function(evt, data, status, xhr){
		$('#new_broadcast .body').html(data.responseText);
	});




