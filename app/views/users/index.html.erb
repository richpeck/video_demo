<div class="profile">

	<div class="options">
	
		<div class="public">
			<%= form_for :new_portfolio, :html => {:multipart => true}, :method => :post, url: portfolio_index_path do |f| %>
				<%= f.check_box :public, :id => "public" %>
			<% end %>
		</div>
		
		<div class="verified"><%= link_to image_tag('profile/verified.png'), root_path  %></div>
		<div class="profile_link">
			<%= link_to user_path(@user) do %>
				http://<%= request.host %><strong><%= user_path(@user) %></strong>
			<% end %>
			<%= link_to image_tag('profile/username_edit.png'), root_path %>
		</div>

	</div>

	<div class="items">
		<div class="avatar">
			<!-- <%= if (@user.profile.avatar.url) then link_to image_tag(@user.profile.avatar.url, :width=> '100%'), root_path, :class => "avatar" end %> -->
			
			<!-- New Avatar Upload Form -->
			<%= form_for :upload, :html => {:multipart => true, :id => "avatar"}, :method => :put, url: profile_path(current_user.id) do |f| %>
				<div class="btn btn-success fileinput-button avatar">
					<%= f.file_field :avatar, :title => "Upload New" %>
					<%= image_tag(@user.profile.avatar.url, :width=> '100%') %>
				</div>
			<% end %>
			<div class="name"><%= link_to name?(@user), root_path %></div>
		</div>
		
		<div class="description">
			<div class="text">
				<p>I love to create new ideas & help people feel good about themselves</p>
				<p>My work has created some really amazing ideas & I hope to give you all the best way to make the most of it</p>
				<p>I trained with the national academy of fine arts & have a wealth of experience with the best ideas you can get ...</p>
				
				<div class="edit">
					<%= link_to image_tag('profile/edit.png'), root_path %>
				</div>
				
			</div>	
			<div class="info">
				<div class="registered">registered <strong><%= time_ago_in_words( @user.created_at ) %> ago</strong></div>
			</div>
		</div>
		
		<div class="portfolio">
			<table class="images">
				<% @user.portfolios.each_slice(2) do |portfolio| %>	
					<tr>
						<% portfolio.each do |cell| %>
							<td><%= link_to image_tag(cell.cover_image.url, :size => "110x110", :title => cell.description), portfolio_path(cell.id), :method => :delete, :confirm => 'Really Delete?' %></td>
						<% end %>
					</tr>
				<% end %>
			</table>
			<div class="info">
				<div class="text"><strong><%= @user.portfolios.count %></strong>  <%= "portfolio photo".pluralize(@user.portfolios.count) %></div>
				<div class="add_photo">
					<%= form_for :new_portfolio, :html => {:multipart => true, :id => "fileupload"}, :method => :post, url: portfolio_index_path do |f| %>
						<span class="btn btn-success fileinput-button">
							<span><%= image_tag('profile/new_photo.png') %></span>
							<%= f.file_field :cover_image %>
						</span>
					<% end %>
				</div>
			</div>
		</div>
	</div>
	
	<div class="categories">
		<ul>
			<% @user.categories.each do |category| %>
				<li><%= link_to category.title, user_category_path(:id => category.id, :user_id => current_user.id), :class => "category a#{rand(1..3)}", :method => :delete %></li>
			<% end %>
			
			<li class="add">
				<%= image_tag('profile/categories_add.png') %>
				<div class="categories_select">
					<% @new_categories.each do |category| %>
						<%= link_to category.title, user_category_path(:id => category.id, :user_id => current_user.id), :method => :put %>
					<% end %>
				</div>
			<li>
		</ul>
	</div>
</div>

<div class="broadcasts">
	<div class="create"><%= link_to "new broadcast", "#new_broadcast", :id => "create_broadcast", :class => "big_button", :rel => "leanModal" %></div>
</div>


	<p style="margin-top: 60px;">You have <b><%= number_to_currency(@credits, :unit => "Â£")  %> Credits</b> in your account</p>
	<hr />
	<div class="container">
		<% @videos.each do |video_room| %>
			<%= link_to "#{video_room.name}", video_path(video_room.id), :method => "get" %>
		<% end %>
	</div>
	<div class="container">
		<%= form_for(@new_video) do |f| %>
			Name: <%= f.text_field :name %><br/><br/>
			Public? <%= f.check_box :public %><br/><br/>

			<%= f.submit %>
		<% end %>
	</div>
	
	<div class="modal" id="new_broadcast">
		<%= render :partial => 'users/new_broadcast' %>
	</div>
	
	<script type="text/javascript">
		$("a[rel*=leanModal]").leanModal( { top: 300, overlay : 0.8, closeButton: ".modal_close" } );
		$('.modal_close').on('click', function(e) {
			e.preventDefault();
		});
	</script>
	
	<script type="text/javascript">
	
		$('#public').ios_switch( $('#public') );
		
		$('#broadcast').on('ajax:beforeSend', function(){
			$('#new_video').loading();
		}).on('ajax:success', function(){
			//Success Stuff
		});
		
	</script>
	
	<script>
		$(document).ready(function () {
			$('#fileupload').fileupload({
				add: function (e, data) {
					var jqXHR = data.submit()
					.success(function (result, textStatus, jqXHR) { location.reload(); })
					.error(function (jqXHR, textStatus, errorThrown) {/* ... */})
					.complete(function (result, textStatus, jqXHR) {/* ... */});
				}
				
			});
			$('#avatar').fileupload({
				add: function (e, data) {
					var jqXHR = data.submit()
					.success(function (result, textStatus, jqXHR) { location.reload(); })
					.error(function (jqXHR, textStatus, errorThrown) {/* ... */})
					.complete(function (result, textStatus, jqXHR) {/* ... */});
				}
				
			});
		});
	</script>